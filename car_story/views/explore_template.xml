<template id="car_story.explore_template" name="Car Story">
    <t t-call="website.layout">
        <div class="container mt-5">
            <h1 class="text-center">Explore Stories</h1>
            <div class="row">
                <t t-foreach="all_image_records" t-as="image">
                    <div class="col-md-3 mb-4">
                        <div class="card">
                            <img t-att-src="'/web/image/%s' % (image.id)" alt="Car Image" class="car-image img-responsive" />
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </t>
</template>